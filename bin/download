#!/usr/bin/env bash

set -euo pipefail

if ! command -v curl >/dev/null; then echo "curl not found. Please install it."; exit 1; fi

echo "Downloading benthos install script into ${ASDF_DOWNLOAD_PATH} ..."

mkdir -p "${ASDF_DOWNLOAD_PATH}"

curl -Lsf https://sh.benthos.dev -o ${ASDF_DOWNLOAD_PATH}/install.sh
